

        <main class="details">
            <!-- Details page -->
            <section id="details">
                <div id="details-wrapper">
                    <p id="details-title">Name: {{stoneData.name}}</p>
                    <div id="img-wrapper">
                        <img src="{{stoneData.image}}" />
                    </div>
                    <div id="info-wrapper">
                        <table>
                            <tr>
                                <td>
                                    <p>
                                        Category: <span id="details-category">{{stoneData.category}}</span>
                                    </p>
                                </td>
                                <td>
                                    <p>Color: <span id="details-color">{{stoneData.color}}</span></p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p>Location: <span id="details-location">{{stoneData.location}}</span></p>
                                </td>
                                <td>
                                    <p>Formula: <span id="details-formula">{{stoneData.formula}}</span></p>
                                </td>
                            </tr>
                        </table>
                        <p>Description: <span id="details-description">{{stoneData.description}}</span></p>
                    </div>

                    <!--Edit and Delete are only for creator-->
                    <div id="action-buttons">
                        {{#if isOwner}}
                        <a href="/stone/{{stoneData._id}}/edit" id="edit-btn">Edit</a>
                        <a href="/stone/{{stoneData._id}}/delete" id="delete-btn">Delete</a>
                        {{else}}
                            {{#if hasUser}}
                            {{#if hasLiked}}
                        <p id="already-liked">You already liked this stone!</p>
                            {{else}}
                        <a href="/stone/{{stoneData._id}}/like" id="like-btn">Like</a>
                            {{/if}}
                            {{/if}}
                        {{/if}}
                    </div>
                </div>
            </section>
        </main>

      