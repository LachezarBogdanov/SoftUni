
        <!-- Start Add Photo Section -->
        <div class="createPage">
            <h2>Add photo</h2>
            <!-- Start Add Photo Form -->
            <form method="POST">
                <p>
                    <input type="text" name="name" value="{{petData.name}}" placeholder="Name">
                </p>

                <p>
                    <input type="number" name="age" value="{{petData.age}}" placeholder="Age">
                </p>

                <p>
                    <textarea type="text" name="description" placeholder="Description">{{petData.description}}</textarea>
                </p>

                <p>
                    <input type="text" name="location" value="{{petData.location}}" placeholder="Location">
                </p>

                <p>
                    <input type="text" name="image" value="{{petData.image}}" placeholder="Link to image">
                </p>
                <!-- Add Photo Button -->
                <button class="add-btn" type="submit">Add Photo</button>
            </form>
        </div>
    